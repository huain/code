<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/txt_white"
    android:layout_gravity="center_vertical|center_horizontal"
    android:orientation="vertical" >

    <TextView android:id="@+id/selection_title" style="@style/mylabel1" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">		<ListView android:id="@+id/selection_list" android:layout_width="match_parent" android:layout_height="wrap_content" ></ListView>
	</LinearLayout>
    
    <LinearLayout
            android:id="@+id/selection_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >
            
            <Button style="@style/myButton1" android:id="@+id/selection_back" android:text="返回" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
            <!-- 
            <Button style="@style/myButton1" android:layout_marginLeft="5dp" android:id="@+id/selection_submit" android:text="确定" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
             -->
        </LinearLayout>


</LinearLayout>