<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:gravity="left"
    android:padding="6dp"
    android:background="@drawable/jo_drawer_listitem_enable_bg"
    android:minHeight="?android:attr/listPreferredItemHeightSmall">
<ImageView android:id="@+id/image1" android:layout_marginLeft="9dp"  android:layout_width="36dp" android:layout_height="36dp" android:contentDescription=""/>
<TextView 
    android:id="@android:id/text1"
    android:layout_width="match_parent"
    android:layout_height="36dp"
    android:textAppearance="?android:attr/textAppearanceListItemSmall"
    android:gravity="left|center_vertical"
    android:paddingLeft="10dp"
    android:textSize="18sp"
    android:textStyle="bold"
    android:textColor="@color/ultra_blue"/>
</LinearLayout>