<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp" 
    android:background="@color/ultra_gray2"
    android:orientation="vertical" >
    
    <LinearLayout android:id="@+id/index_info_area"
        android:orientation="vertical" 
        android:background="@drawable/common_card_background"
        android:padding="12dp"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content">
	    <LinearLayout 
	        android:orientation="horizontal" 
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content">
	    
	        <ImageView android:id="@+id/index_header" android:src="@drawable/userheadpic_default"  android:layout_width="64dp" android:layout_height="64dp"/>
	        
	        <LinearLayout android:orientation="vertical" android:gravity="top|left" 
	            android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1">
	            <LinearLayout android:orientation="horizontal" android:gravity="left|center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content" >
		            <TextView android:id="@+id/index_fullname" style="@style/mylabel1" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
		            <TextView android:id="@+id/index_post" android:paddingLeft="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
	            </LinearLayout>
	            <TextView android:id="@+id/index_dep" android:paddingLeft="8dp"  android:layout_width="match_parent" android:layout_height="wrap_content"/>
	            
	        </LinearLayout>
	    </LinearLayout>
	    <View android:visibility="gone" android:layout_marginTop="8dp"  android:layout_width="fill_parent"  android:layout_height="1dp" android:background="?android:attr/listDivider"  />  
	    <LinearLayout 
	        android:paddingTop="8dp"
	        android:visibility="gone"
	        android:orientation="horizontal" 
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content">
	        
	        <LinearLayout android:gravity="center_horizontal" android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content" android:orientation="vertical">
	            <TextView android:id="@+id/index_onlinesum" style="@style/mylabel4" android:layout_width="match_parent" android:layout_height="wrap_content"/>
	            <TextView style="@style/mylabel6" android:text="当前在线" android:layout_width="match_parent" android:layout_height="wrap_content"/>
	        </LinearLayout>
	        <LinearLayout android:gravity="center_horizontal" android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content" android:orientation="vertical">
	            <TextView android:id="@+id/index_waitdealsum" style="@style/mylabel4" android:layout_width="match_parent" android:layout_height="wrap_content"/>
	            <TextView style="@style/mylabel6" android:text="我的待办" android:layout_width="match_parent" android:layout_height="wrap_content"/>
	        </LinearLayout>
	    </LinearLayout>
	</LinearLayout>
	
    <TextView style="@style/mylabel1" android:paddingTop="16dp" android:text="最近日报填写情况" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <LinearLayout android:padding="12dp" android:background="@drawable/common_card_background" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout  android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" >
    	<LinearLayout android:id="@+id/index_dailyinfo_item_area0" style="@style/index_dailyinfoarea_item_wait" android:orientation="vertical" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" >
    	    <TextView android:id="@+id/index_dailyinfo_item0" style="@style/mylabel5" android:layout_width="match_parent" android:layout_height="wrap_content"/>
	        <TextView style="@style/mylabel5" android:text="上周" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    	</LinearLayout>
    	<LinearLayout android:id="@+id/index_dailyinfo_item_area1"  android:layout_marginLeft="5dp" style="@style/index_dailyinfoarea_item_wait" android:orientation="vertical" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" >
    	    <TextView android:id="@+id/index_dailyinfo_item1" style="@style/mylabel5" android:layout_width="match_parent" android:layout_height="wrap_content"/>
	        <TextView style="@style/mylabel5" android:text="星期一" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    	</LinearLayout>
    	<LinearLayout android:id="@+id/index_dailyinfo_item_area2" android:layout_marginLeft="5dp" style="@style/index_dailyinfoarea_item_wait" android:orientation="vertical" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" >
    	    <TextView android:id="@+id/index_dailyinfo_item2" style="@style/mylabel5" android:layout_width="match_parent" android:layout_height="wrap_content"/>
	        <TextView style="@style/mylabel5" android:text="星期二" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    	</LinearLayout>
    	<LinearLayout android:id="@+id/index_dailyinfo_item_area3" android:layout_marginLeft="5dp" style="@style/index_dailyinfoarea_item_wait" android:orientation="vertical" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" >
    	    <TextView android:id="@+id/index_dailyinfo_item3" style="@style/mylabel5" android:layout_width="match_parent" android:layout_height="wrap_content"/>
	        <TextView style="@style/mylabel5" android:text="星期三" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    	</LinearLayout>
    </LinearLayout>
     <LinearLayout android:layout_marginTop="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" >	
    	<LinearLayout android:id="@+id/index_dailyinfo_item_area4" style="@style/index_dailyinfoarea_item_wait" android:orientation="vertical" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" >
    	    <TextView android:id="@+id/index_dailyinfo_item4" style="@style/mylabel5" android:layout_width="match_parent" android:layout_height="wrap_content"/>
	        <TextView style="@style/mylabel5" android:text="星期四" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    	</LinearLayout>
    	 <LinearLayout android:id="@+id/index_dailyinfo_item_area5" android:layout_marginLeft="5dp" style="@style/index_dailyinfoarea_item_wait" android:orientation="vertical" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" >
    	    <TextView android:id="@+id/index_dailyinfo_item5" style="@style/mylabel5" android:layout_width="match_parent" android:layout_height="wrap_content"/>
	        <TextView style="@style/mylabel5" android:text="星期五" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    	</LinearLayout>
    	<LinearLayout android:id="@+id/index_dailyinfo_item_area6" android:layout_marginLeft="5dp" style="@style/index_dailyinfoarea_item_wait" android:orientation="vertical" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" >
    	    <TextView android:id="@+id/index_dailyinfo_item6" style="@style/mylabel5" android:layout_width="match_parent" android:layout_height="wrap_content"/>
	        <TextView style="@style/mylabel5" android:text="星期六" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    	</LinearLayout>
    	<LinearLayout android:id="@+id/index_dailyinfo_item_area7" android:layout_marginLeft="5dp" style="@style/index_dailyinfoarea_item_wait" android:orientation="vertical" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" >
    	    <TextView android:id="@+id/index_dailyinfo_item7" style="@style/mylabel5" android:layout_width="match_parent" android:layout_height="wrap_content"/>
	        <TextView style="@style/mylabel5" android:text="星期日" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    	</LinearLayout>
    </LinearLayout>
    </LinearLayout>
    
    <TextView style="@style/mylabel1" android:paddingTop="16dp" android:text="最新待办（最多显示5条记录）" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <LinearLayout android:padding="12dp" android:background="@drawable/common_card_background" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ListView android:id="@+id/index_waitdeallist" android:layout_width="match_parent" android:layout_height="wrap_content"></ListView>
    <TextView android:id="@+id/index_waitdeallist_none" android:visibility="gone" android:text="当前没有待办！" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    
    </LinearLayout>

</LinearLayout>