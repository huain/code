<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/calendar_grid_item_linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:orientation="vertical" >
    
    <TextView android:id="@+id/calendar_grid_item_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center_vertical|center_horizontal"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical|center_horizontal">
        <ImageView android:id="@+id/calendar_grid_item_icon_daily" android:layout_marginRight="1dp" android:src="@drawable/calendar_grid_item_status_gray" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <ImageView android:id="@+id/calendar_grid_item_icon_sign" android:layout_marginLeft="1dp" android:src="@drawable/calendar_grid_item_status_gray" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>