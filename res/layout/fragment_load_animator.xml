<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ultra_gray2"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical" >
    
    <FrameLayout
        android:layout_width="64dp"
        android:layout_height="64dp" >
        <ImageView
            android:id="@+id/fragmentload_image_text"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:src="@drawable/loading1_text" />

        <ImageView
            android:id="@+id/fragmentload_image"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:src="@drawable/loading1_circle" />
    </FrameLayout>
    <TextView android:text="正在加载，请稍候" style="@style/mylabel1" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

</LinearLayout>