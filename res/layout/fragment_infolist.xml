        android:id="@+id/infoList"
        android:divider="#00000000"
        android:dividerHeight="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    
    <TextView android:id="@+id/infoLoad" android:text="请点击搜索按钮，输入相应搜索信息……！" android:layout_width="match_parent" 
     android:textSize="16sp" android:textColor="@color/ultra_blue" android:paddingTop="48dp"   android:gravity="top|center_horizontal"    android:layout_height="match_parent" android:visibility="visible" />
    
    
	<TextView android:id="@+id/infoNoResult" android:text="抱歉，没有找到相应的记录！" android:layout_width="match_parent" 
     android:textSize="16sp" android:textColor="@color/ultra_blue" android:paddingTop="48dp"   android:gravity="top|center_horizontal"    android:layout_height="match_parent" android:visibility="gone" />
