<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialogFragment_progress"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_gravity="center"
    android:orientation="horizontal" >

    <FrameLayout
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:gravity="center" >

        <ImageView
            android:id="@+id/dialogFragment_image_text"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:src="@drawable/loading1_text" />

        <ImageView
            android:id="@+id/dialogFragment_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:src="@drawable/loading1_circle" />
    </FrameLayout>

    <TextView
        android:id="@+id/dialogFragment_tip"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:textAlignment="center" >
    </TextView>

</LinearLayout>