<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>
    
    <!-- general styles for the action bar -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <!-- <item name="android:titleTextStyle">@style/TitleTextStyle</item>-->
        <!-- <item name="android:background">@drawable/actionbar_background</item>-->
        <item name="android:background">@color/ultra_blue</item>
        <item name="android:titleTextStyle">@style/myactionbarTitle</item>
        <!-- <item name="android:backgroundStacked">@drawable/actionbar_background</item>-->
        <!-- <item name="android:backgroundSplit">@drawable/actionbar_background</item>-->
    </style>
    
     <style name="myactionbarTitle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/txt_white</item>
    </style>
    
	<style name="myListview">
